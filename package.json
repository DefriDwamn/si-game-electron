{
  "name": "SiGame",
  "productName": "SiGame",
  "main": "main.js",
  "description": "Quiz game",
  "version": "1.0.0",
  "scripts": {
    "start": "electron .",
    "build-css": "sass src/css/app.scss src/css/app.css && sass src/css/start.scss src/css/start.css",
    "build": "npm run build-css && electron-builder --win"
  },
  "author": {
    "name": "DefriDwamn",
    "email": "Yakovnova@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.3.5",
    "electron-builder": "^23.6.0",
    "sass": "^1.92.1"
  },
  "build": {
    "asar": true,
    "files": [
      "!node_modules/**",
      "!LICENSE.md",
      "!.gitgnore",
      "!testQuestionPack/**",
      "!src/css/start.css.map",
      "!src/css/app.css.map",
      "!src/css/start.scss",
      "!src/css/app.scss"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
